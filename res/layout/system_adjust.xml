<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:paddingTop="8dip"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:weightSum="10"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/playonstarttext"
            android:textSize="18sp"
            android:layout_width="0dip"
            android:layout_weight="7"
            android:text="应用启动时自动播放"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start" />

        <ToggleButton
            android:id="@+id/PlayOnStratBtn"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginTop="5dip"
        android:weightSum="10"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/changewhennexttext"
            android:textSize="18sp"
            android:layout_width="0dip"
            android:layout_weight="7"
            android:text="切歌时切图"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start" />

        <ToggleButton
            android:id="@+id/changewhennextbtn"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginTop="5dip"
        android:weightSum="10"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/autoChangeBkgtext"
            android:textSize="18sp"
            android:layout_width="0dip"
            android:layout_weight="7"
            android:text="自动切换背景"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start" />

        <ToggleButton
            android:id="@+id/autoChangeBkgbtn"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:id="@+id/time_selector"
        android:weightSum="10"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="18sp"
            android:layout_width="0dip"
            android:layout_weight="5"
            android:text="切换背景的时间间隔"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start" />

        <EditText
            android:id="@+id/autoChangeBkgTime"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:inputType="number"
            android:hint="秒"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/time_save_btn"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:text="save"
            android:layout_height="match_parent" />
        
    </LinearLayout>
    
    
    
</LinearLayout>
